@model IEnumerable<ED1_Proyecto.Models.Paciente>

@{
    ViewBag.Title = "Index";
}

<h2>Pacientes registrados</h2>

<p>
    @Html.ActionLink("Registrar Nuevo paciente", "Create")
    

</p>
<p>

    @Html.ActionLink("Ver Pacientes Confirmados", "PacientesConfirmados")
</p>
<p>
    @Html.ActionLink("Ver Pacientes Sospechosos", "PacientesNoConfirmados")

</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Identificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Municipio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sintomas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescripcionContagioPosible)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstadoPaciente)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Edad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Identificacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Municipio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sintomas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionContagioPosible)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoPaciente)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Examen", "SimularExamen", new { id=item.Id }) |
            @Html.ActionLink("Paciente Recuperado", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
